#! /bin/sh
set -e

if [ "$1" = rtupdate ]; then
	py3clean -p gedit-plugins /usr/lib/i386-linux-gnu/gedit/plugins
	py3compile -p gedit-plugins -V 3.5 /usr/lib/i386-linux-gnu/gedit/plugins
fi

if [ "$1" = rtupdate ]; then
	py3clean -p gedit-plugins /usr/share/gedit/plugins
	py3compile -p gedit-plugins  /usr/share/gedit/plugins
fi